<object class="GtkWindow" id="main_window">
  <property name="title">Password Manager</property>
  <child>
    <object class="GtkBox" id="main_box">
      <property name="orientation">vertical</property>
      <property name="spacing">8</property>

      <!-- Entry: Service -->
      <child>
        <object class="GtkEntry" id="entry_service">
          <property name="placeholder_text">Service</property>
        </object>
      </child>

      <!-- Entry: Login -->
      <child>
        <object class="GtkEntry" id="entry_login">
          <property name="placeholder_text">Login</property>
        </object>
      </child>

      <!-- Entry: Password -->
      <child>
        <object class="GtkEntry" id="entry_password">
          <property name="placeholder_text">Password</property>
          <property name="visibility">False</property>
        </object>
      </child>

      <!-- Button: Save -->
      <child>
        <object class="GtkButton" id="button_save">
          <property name="label">Save</property>
        </object>
      </child>

      <!-- List of entries -->
      <child>
        <object class="GtkListBox" id="list_passwords"/>
      </child>

    </object>
  </child>
</object>